<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#4F8FF7"
    tools:context="nl.avans.film_app.FilmDetailActivity">

    <ImageView
        android:id="@+id/activity_film_detail_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@color/colorPrimary">

    </ImageView>

    <TextView
        android:id="@+id/activity_film_detail_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="Verdana"
        android:text="Film titel"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activity_film_detail_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="Verdana"
        android:gravity="center_horizontal"
        android:text="Beschrijving"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/activity_film_detail_rating"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="Verdana"
        android:gravity="center_horizontal"
        android:text="Rating"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/activity_film_detail_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="Verdana"
        android:text="Status"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/activity_film_detail_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5"
        android:background="@android:color/background_dark"
        android:padding="2dp"
        android:text="Huur deze film"
        android:textColor="@android:color/background_light" />
</LinearLayout>